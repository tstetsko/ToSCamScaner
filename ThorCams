#AddLabel(yes, "SecondsFromTime(00)[1]:" + SecondsFromTime(00)[1], Color.DARK_GREEN);

#AddLabel(yes, "close(period = aggregationPeriod)[1]:" + close(period = aggregationPeriod)[1], #Color.DARK_GREEN);

